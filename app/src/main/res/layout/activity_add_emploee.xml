<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_12sdp"
    android:paddingRight="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.sparken02.retrofitemployee.EmploeeAdd">

    <EditText
        android:id="@+id/edtAddname"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>
    <EditText
        android:id="@+id/edtAddemail"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"/>
    <EditText
        android:id="@+id/edtAddpassword"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"/>
    <EditText
        android:id="@+id/edtAddmobile"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:inputType="phone"/>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rdAddmale"
            android:text="Male"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/rdAddfemale"
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    </LinearLayout>
    <Spinner
        android:id="@+id/spAddcity"
        android:entries="@array/city"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>
    <Button
        android:background="@android:color/holo_blue_bright"
        android:id="@+id/btnAdd"
        android:textSize="@dimen/_25sdp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_gravity="center|bottom"
        android:text="Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
